<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  
  <display-name>HL Generator Solutions</display-name>
  <description>Hệ thống quản lý máy phát điện</description>
  
  <!-- Welcome files -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>home</welcome-file>
  </welcome-file-list>
  
  <!-- Error pages -->
  <error-page>
    <error-code>404</error-code>
    <location>/error/404.jsp</location>
  </error-page>
  
  <error-page>
    <error-code>500</error-code>
    <location>/error/500.jsp</location>
  </error-page>
  
  <!-- Session timeout (30 minutes) -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  
  <!-- Servlets are configured using @WebServlet annotations -->
  


  <servlet>
    <servlet-name>SupplierServlet</servlet-name>
    <servlet-class>com.hlgenerator.servlet.SupplierServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SupplierServlet</servlet-name>
    <url-pattern>/api/suppliers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CustomerServlet</servlet-name>
    <servlet-class>com.hlgenerator.servlet.CustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/api/customers</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.hlgenerator.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
</web-app>
